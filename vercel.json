{
  "builds": [
    {
      "src": "ui/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/apps/api/src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/apps/api/src/main.ts" },
    { "src": "/(.*)", "dest": "ui/$1" }
  ]
}
